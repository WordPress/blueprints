{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "meta": {
        "title": "Use runSql to run SQL queries",
        "description": "Use runSql to run a SQL query that removes default posts from default theme and import a new set of posts from a WXR file",
        "author": "juanmaguitar",
        "categories": [
            "SQL",
            "import"
        ]
    },
    "landingPage": "/?p=10",
    "steps": [
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        },
        {
            "step": "runSql",
            "sql": {
                "resource": "literal",
                "name": "schema.sql",
                "contents": "DELETE FROM wp_posts"
            }
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/wordpress/blueprints/trunk/blueprints/sql-queries/content.xml"
            }
        }
    ]
}